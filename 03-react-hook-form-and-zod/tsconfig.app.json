// ブラウザ環境向けのTypeScript設定
{
  "compilerOptions": {
    // TypeScriptの増分ビルド用のキャッシュファイルを保存する場所を指定
    // "build": "tsc -b && vite build"で変更分のみ再コンパイル可能に
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // ブラウザ互換性を重視。古いブラウザもサポート
    "target": "ES2020",
    "useDefineForClassFields": true,
    // JavaScript + ブラウザAPIを含むライブラリ群を指定
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    // JSXを変換する際の設定
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
